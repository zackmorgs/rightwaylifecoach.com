{
  "name": "rightwaylifecoach.com",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel watch:*",
    "watch:sass": "sass --watch ./style.dev.scss:./style.out.css",
    "watch:postcss": "postcss ./style.out.css -o ./style.css --watch",
    "watch:js": "esbuild ./assets/js/script.js --bundle --minify --outfile=./assets/js/script.min.js --watch",
    "build": "npm-run-all build:sass build:postcss build:js",
    "build:sass": "sass ./style.dev.scss:./style.out.css",
    "build:postcss": "postcss ./style.out.css -o ./style.css",
    "build:js": "esbuild ./assets/js/script.js --bundle --minify --outfile=./assets/js/script.min.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "autoprefixer": "^10.4.23",
    "cssnano": "^7.1.2",
    "esbuild": "^0.27.1",
    "modern-normalize": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "sass": "^1.97.0"
  }
}
